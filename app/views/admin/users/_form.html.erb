<%= flash_message(resource: form.object) %>

<div class="form-group">
  <%= form.label :name, class: 'small mb-1' %>
  <%= form.text_field :name, class: 'form-control py-2', placeholder: 'Name' %>
</div>
<div class="form-group">
  <%= form.label :email, class: 'small mb-1' %>
  <%= form.email_field :email, class: 'form-control py-2', placeholder: 'Email' %>
</div>
<div class="form-group">
  <%= form.label :role, class: 'small mb-1' %>
  <%= form.select :role, User.roles.keys, { }, { class: 'form-select' } %>
</div>
<div class="form-group">
  <%= form.label :password, class: 'small mb-1' %>
  <%= form.password_field :password, class: 'form-control py-2' %>
  <%= "<i>(leave blank if you don't want to change it)</i>" if form.object.persisted? %>
</div>
<div class="form-group">
  <%= form.label :password_confirmation, class: 'small mb-1' %>
  <%= form.password_field :password_confirmation, class: 'form-control py-2' %>
</div>

<div class="d-flex align-items-center justify-content-end">
  <div class="form-group">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
</div>
