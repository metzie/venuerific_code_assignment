<%= flash_message(resource: form.object) %>

<div class="form-group">
  <%= form.label :title, class: 'small mb-1' %>
  <%= form.text_field :title, class: 'form-control py-2', placeholder: 'Title' %>
</div>
<div class="form-group">
  <%= form.label :excerpt, class: 'small mb-1' %>
  <%= form.text_field :excerpt, class: 'form-control py-2', placeholder: 'Excerpt' %>
</div>
<div class="form-group">
  <%= form.label :content, class: 'small mb-1' %>
  <%= form.text_area :content, class: 'form-control py-2', placeholder: 'Content' %>
</div>
<div class="form-group">
  <%= form.label :published_at, class: 'small mb-1' %>
  <%= form.datetime_field :published_at, class: 'form-control py-2' %>
</div>
<div class="form-group">
  <%= form.label :meta_keywords, class: 'small mb-1' %>
  <%= form.text_field :meta_keywords, class: 'form-control py-2', placeholder: 'keyword, keyword, keyword' %>
</div>
<div class="form-group">
  <%= form.label :meta_description, class: 'small mb-1' %>
  <%= form.text_area :meta_description, class: 'form-control py-2', placeholder: 'Description' %>
</div>

<div class="d-flex align-items-center justify-content-between">
  <div class="form-group">
    <div class="form-check">
      <%= form.check_box :published, class: 'form-check-input' %>
      <%= form.label :published, class: 'form-check-label' %>
    </div>
  </div>
  <div class="form-group">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
</div>
