<div class="row justify-content-center">
  <div class="col-lg-7">
    <div class="card shadow-lg border-0 rounded-lg mt-5">
      <div class="card-header"><h3 class="text-center font-weight-light my-4">Edit Account</h3></div>
      <div class="card-body">
        <%= flash_message(resource: resource) %>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <div class="form-floating mb-3">
            <%= f.text_field :name, class: "form-control", autofocus: true, autocomplete: "name", placeholder: "Your Name" %>
            <%= f.label :name, class: "form-check-label" %>
          </div>
          <div class="form-floating mb-3">
            <%= f.text_field :email, class: "form-control", autocomplete: "email", placeholder: "Email Address" %>
            <%= f.label :email, class: "form-check-label" %>
          </div>
          <div class="form-floating mb-3">
            <%= f.password_field :password, class: "form-control", autocomplete: "new-password", placeholder: "Password" %>
            <%= f.label :password, class: "form-check-label" %> <i>(leave blank if you don't want to change it)</i>
          </div>
          <div class="form-floating mb-3">
            <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password", placeholder: "Password Confirmation" %>
            <%= f.label :password_confirmation, class: "form-check-label" %>
          </div>
          <div class="form-floating mb-3">
            <%= f.password_field :current_password, class: "form-control", autocomplete: "current-password", placeholder: "Current Password" %>
            <%= f.label :current_password, class: "form-check-label" %> <i>(we need your current password to confirm your changes)</i>
          </div>
          <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
            <%= f.submit "Update", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
